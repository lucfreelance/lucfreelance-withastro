        { name: "TailWind CSS", category: "frameworks" },
        { name: "React.js", category: "libraries" },
		{ name: "Redux", category: "libraries" },
		{ name: "Axios", category: "libraries" },
		{ name: "Express", category: "libraries" },
		{ name: "jQuery", category: "libraries" },
		{ name: "Bootstrap", category: "libraries" },
		{ name: "TypeScript", category: "libraries" },
		{ name: "Vue.js", category: "libraries" },
		{ name: "Angular", category: "libraries" },
