<script>
document.addEventListener("DOMContentLoaded", function () {
    const skills = [
        { name: "HTML5", category: "languages" },
        { name: "CSS3", category: "languages" },
        { name: "JavaScript", category: "languages" },
        { name: "SQL", category: "languages" },
        { name: "Python", category: "languages" },
