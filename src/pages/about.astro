        { name: "Joomla", category: "cms" },
        { name: "Drupal", category: "cms" },
        { name: "Joomla", category: "cms" },
        { name: "Contentful", category: "cms" },
        { name: "Webflow", category: "cms" },
        { name: "Ghost", category: "cms" },
        { name: "Shopify", category: "cms" },
        { name: "PrestaShop", category: "cms" },
        { name: "All", category: "all" }
    ];

	const skillCloud = document.querySelector(".skill-cloud");
    const filterButtons = document.querySelectorAll(".filter-button");

    function generateSkillCloud() {
        skillCloud.innerHTML = "";
        skills.forEach(skill => {
            const skillTag = document.createElement("div");
            skillTag.classList.add("skill-tag");
            skillTag.textContent = skill.name;
            skillTag.addEventListener("click", () => filterSkills(skill.category));
            skillCloud.appendChild(skillTag);
        });
    }

    function filterSkills(category) {
        skillCloud.innerHTML = "";
        const filteredSkills = skills.filter(skill => skill.category === category || category === "all");
        filteredSkills.forEach(skill => {
            const skillTag = document.createElement("div");
            skillTag.classList.add("skill-tag");
            skillTag.textContent = skill.name;
            skillTag.addEventListener("click", () => filterSkills(skill.category));
            skillCloud.appendChild(skillTag);
        });
    }

    generateSkillCloud();

    filterButtons.forEach(button => {
        button.addEventListener("click", () => {
            filterButtons.forEach(btn => btn.classList.remove("active"));
            button.classList.add("active");
            const filter = button.getAttribute("data-filter");
            filterSkills(filter);
        });
    });
});
</script>